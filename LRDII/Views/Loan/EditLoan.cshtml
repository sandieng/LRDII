@model LRDII.Models.LoanTransactionViewModel

<h2>Edit Pinjaman Uang</h2>

<h4>Koperasi LRDII</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditLoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="NomorPinjaman" class="control-label"></label>
                <input asp-for="NomorPinjaman" class="form-control" />
                <span asp-validation-for="NomorPinjaman" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ClearForm" asp-route-actionname="EditLoan">Clear Formulir</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}